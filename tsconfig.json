{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "importHelpers": true,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts"
  ],
}